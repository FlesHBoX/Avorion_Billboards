<Window x:Class="Avorion_Billboards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avorion_Billboards"
        mc:Ignorable="d"
        Title="MainWindow" Height="125  " Width="400">
    <Grid Margin="0,0,2,0">
        <Label Content="Select image to use" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="input_Image" HorizontalAlignment="Left" Height="23" Margin="90,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="283"/>
        <Button x:Name="Browse_Button" Content="Browse" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="75" Click="Browse_Button_Click" Height="23"/>
        <Button x:Name="Create_Ship" Content="Create Ship" HorizontalAlignment="Left" Margin="298,61,0,0" VerticalAlignment="Top" Width="75" Click="Create_Ship_Click"/>

    </Grid>
</Window>
